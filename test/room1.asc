function hDoorCorriReiss_UseInv()
{
  if (player.ActiveInventory == iKeyTownHall)
    {
      doorCorriReissLock=false;
      player.Say ("Die Tür ist jetzt offen");
    }
    else
    {
      player.Say("Das ergibt einfach keinen Sinn!");
    }
}

