// room script file

function hZurueckEingang_Interact()
{
  player.ChangeRoom (8);
}



function hRussischeKapelle_Look()
{
  player.Say("Dies ist der Eingang der Russischen Kapelle");
}


function hRussischeKapelle_UseInv()
{
  if (player.ActiveInventory ==iBookJugendstil)
  {
    player.Say("Im Buch steht zum Eingang und zum Inneren der Kapelle:");
    player.Say("Das Bild über dem Eingang stellt die Patronin der Kapelle St. Maria Magdalena dar. ");
    player.Say("Die Kapelle hat einen Kreuzförmigen Grundriss mit Vorhalle, überkuppeltem Mittelbau, Querhaus und Chor.");
    player.Say("Der Altarraum wird durch eine hölzerne Ikonostase vom Kirchenraum getrennt. Sie entstammt der Londoner Hauskapelle des Prinzen Alfred von Großbriannien (1844-1900).");

  }
  else
  {
    player.Say("Das ergibt doch keinen Sinn");
  } 
}

function hHochzeitsturm_Look()
{
  player.Say("Das ist der Hochzeitsturm.");
}

function hHochzeitsturm_UseInv()
{
  if (player.ActiveInventory ==iBookJugendstil)
  {
    player.Say("Im Buch steht zu diesem Gebäude:");
    player.Say("Der Turm wurde 1908 zur Erinnerung an die Vermählung Großherzog Ernst Ludwigs 1905 erbaut.");
    player.Say("Der Entwurf stammt von Joseph Maria Olbrich.");
    player.Say("Er ist 48,5M hoch und gliedert sich in 3 Abschnitte. Dem grau verputzten Eingangsbereich, den geklinkerten Turmkörper und der fünffinngrigen Krone.");
    player.Say("Die Darmstädter bezeichnen ihn daher auch als Fünffinger Turm.");
  }
  else
  {
    player.Say("Das ergibt doch keinen Sinn");
  } 
}

function hZurueckEingang_Look()
{
  player.Say("Hier komme ich zurück zum Eingang der Mathildenhöhe. Übrigens stand hier ursprünglich das Löwentor.");
}

function oStoneFauntain_Look()
{
  player.Say("Ist das ein Schwimmbad auf dem Stein?");
}

function oStoneFauntain_Interact()
{
  player.Say("Ich glaube der liegt hier richtig!");
}

function oStoneELH_Look()
{
  player.Say("Ein Stein mit einer schönen Tür drauf");
}

function oStoneELH_Interact()
{
  player.AddInventory(iStoneELH);
  oStoneELH.Visible=false;
}

function hStoneplace_Look()
{
if (oStoneELH.Visible == false)
  {
    if (oStoneFauntain.Visible == false)
    {
      player.Say("Hier fehlt etwas.");
    }
  }
}

function hStoneplace_UseInv()
{
  if (player.ActiveInventory == iStoneFauntain)
  {
    player.LoseInventory(iStoneFauntain);
    oStoneFauntain.Visible = true;
    rigthStones ++ ;
  }
  else
  {
    player.Say("Ich möchte das doch lieber behalten");
  }
}

function room_Load()
{
  player.PlaceOnWalkableArea();
}
