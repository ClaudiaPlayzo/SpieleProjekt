function hAustellungsgebaeude_UseInv()
{
  if (player.ActiveInventory ==iBookJugendstil)
  {
    player.Say("Im Buch steht zu diesem Gebäude:");
    player.Say("Die Austellungshalle wurde 1908 zur großen Hessischen Landesausstellung gebaut.");
    player.Say("Der Entwurf stammt von Joseph Maria Olbrich.");
    player.Say("Sie wurde gemeinsam mit dem Hochzeitsturm auch als Stadtkrone der Stadt Darmstadt bezeichnet.");
    player.Say("Unter den Hallen verbirgt sich das faszinierende Gewölbe eines gemauerten Wasserreservoirs von 1877.");
  }
  else
  {
    player.Say("Das ergibt doch keinen Sinn");
  } 
}

function hHochzeitsturm_UseInv()
{
  if (player.ActiveInventory ==iBookJugendstil)
  {
    player.Say("Im Buch steht zu diesem Gebäude:");
    player.Say("Der Turm wurde 1908 zur Erinnerung an die Vermählung Großherzog Ernst Ludwigs 1905 erbaut.");
    player.Say("Der Entwurf stammt von Joseph Maria Olbrich.");
    player.Say("Er ist 48,5M hoch und gliedert sich in 3 Abschnitte. Dem grau verputzten Eingangsbereich, den geklinkerten Turmkörper und der fünffingrigen Krone.");
    player.Say("Die Darmstädter bezeichnen ihn daher auch als Fünffinger Turm.");
  }
  else
  {
    player.Say("Das ergibt doch keinen Sinn");
  } 
}

